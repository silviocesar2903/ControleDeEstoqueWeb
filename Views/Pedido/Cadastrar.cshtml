@model PedidoModel
@{
    if(Context.Request.RouteValues.ContainsKey("id"))
    {
        ViewBag.Subtitulo = "Alateração de Pedidos";
    }
    else
    {
        ViewBag.Subtitulo = "Cadastro de Pedidos";
    }
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<form asp-action="Cadastrar" class="row">
    <input type="hidden" asp-for="@Model.IdPedido">
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.ItemPedido.Produto">Categoria:</label>
        <select asp-for="@Model.ItemPedido.Produto" class="form-control" asp-items="@(IEnumerable<SelectListItem>)ViewBag.Produtos"></select>
        <span asp-validation-for="@Model.ItemPedido.Produto" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-4 col-lg-2">
        <label asp-for="@Model.ItemPedido.Quantidade">Quantidade:</label>
        <input asp-for="@Model.ItemPedido.Quantidade" class="form-control " autofocus>
        <span asp-validation-for="@Model.ItemPedido.Quantidade" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>